generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id      Int      @id @default(autoincrement())
  title   String
  artist  String
  cover   String
  tracks  Track[]
}

model Track {
  id       Int     @id @default(autoincrement())
  title    String
  duration Int
  albumId  Int
  album    Album   @relation(fields: [albumId], references: [id])
}
